{
    "compilerOptions": {
      "target": "es5",
      "noImplicitAny": true,
      "allowSyntheticDefaultImports": true,
      "strictNullChecks": true,
      "noImplicitThis": true,
      "outDir": "build",
      "moduleResolution": "node",
      "declaration": true,
      "esModuleInterop": true,
      "sourceMap": true,
      "skipLibCheck": true,
      "strict": true,
      "noUnusedLocals": true,
      "noUnusedParameters": true,
      "noImplicitReturns": true,
      "importHelpers": false,
      "noFallthroughCasesInSwitch": true,
      "jsx": "react-jsx",
      "module": "ESNext",
      "types": ["node", "react"],
      "plugins": [{ "name": "typescript-plugin-css-modules" }]
    },
    "exclude": [
        "be_node"
    ],
    "compileOnSave": true
}
